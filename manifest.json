{
    "manifest_version": 3,
    "name": "Idle Redirect Extension",
    "version": "1.0",
    "description": "Redirects to homepage after idle time",
    "permissions": [
        "tabs",
        "storage",
        "idle"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}